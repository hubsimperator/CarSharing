<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".Other.MainActivity">

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:weightSum="5"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/openCar_bt"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_open" />

        <ImageView
            android:id="@+id/closeCar_bt"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_close" />
    </LinearLayout>

        <Button
            android:id="@+id/qrscanner_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otworz auto QR kodem"
            android:visibility="gone" />
        <TextView
            android:id="@+id/infoAboutDistance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Jesteś za daleko samochodu, żeby go otworzyć !" />

        <TextView
            android:id="@+id/infoAboutGPS_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:textSize="20dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Oczekiwanie na sygnał GPS..." />

        <ImageView
            android:id="@+id/potwierdz_bt"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <ImageView
            android:id="@+id/lokalizuj_bt"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/pokaznamapie" />

        <ImageView
            android:id="@+id/zmiana_czasu_bt"
            android:layout_width="wrap_content"
            android:layout_gravity="center"

            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/zmien_czas" />

        <ImageView
            android:id="@+id/anuluj_bt"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/anuluj" />

        <ImageView
            android:id="@+id/zakoncz_bt"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/zakonczrezerwacje" />

        <ImageView
            android:id="@+id/back_bt"
            android:layout_width="73dp"
            android:layout_marginBottom="20sp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/back" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
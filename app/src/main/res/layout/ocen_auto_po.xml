<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".Other.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Stan pojazdu po zakończeniu rezerwacji"
            android:textColor="#1f90cc"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text="Samochód nieuszkodzony" />
            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:thumbTint="@xml/checker_track"

                android:layout_height="match_parent"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text="Samochód czysty" />
            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:thumbTint="@xml/checker_track"

                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="50sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text="Kabel ładujący" />
            <Switch
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:thumbTint="#1f90cc"
                android:trackTint="#1f90cc"
                android:layout_height="match_parent"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/rezerwuj_bt"
            android:layout_width="280dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            app:srcCompat="@drawable/zakonczrezerwacje" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_bt"
                android:layout_width="73dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                app:srcCompat="@drawable/back" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

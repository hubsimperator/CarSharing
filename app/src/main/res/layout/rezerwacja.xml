<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo2"
    tools:context=".Other.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="10"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1f90cc"
            android:gravity="center"
            android:text="Zaplanuj rezerwację"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView222"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text="Tytuł"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/tytul_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#9e9191"
                android:textColor="#1f90cc"
                android:hint="Tytuł" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text="Cały dzień"
                android:textSize="15dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:gravity="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="74dp"
                android:textColor="#1f90cc"
                android:layout_height="wrap_content"
                android:text="Projekt"
                android:textSize="15dp" />

            <EditText
                android:textColor="#1f90cc"
                android:id="@+id/notatka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColorHint="#9e9191"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="74dp"
                android:textColor="#1f90cc"
                android:layout_height="wrap_content"
                android:text="Początek"
                android:textSize="15dp" />

            <EditText
                android:textColor="#1f90cc"
                android:id="@+id/poczatek_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColorHint="#9e9191"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="74dp"
                android:textColor="#1f90cc"
                android:layout_height="wrap_content"
                android:text="Koniec"
                android:textSize="15dp" />

            <EditText
                android:textColor="#1f90cc"
                android:id="@+id/koniec_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColorHint="#9e9191"
                android:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="74dp"
                android:textColor="#1f90cc"
                android:layout_height="match_parent"
                android:text="Jadę z parkingu :"
                android:textSize="15dp" />

            <Spinner
                android:textColor="#1f90cc"
                android:id="@+id/parking_sp"
                android:layout_width="match_parent"
                android:textColorHint="#9e9191"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="166dp"
                android:textColor="#1f90cc"
                android:layout_height="wrap_content"
                android:text="Przewidywany dystans"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/dystans"
                android:layout_width="50dp"
                android:textColor="#1f90cc"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[km]"
                android:textColor="#1f90cc"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_wybrany_tv"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text="Wybrany samochód"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/wybor_samochodu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text=""
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_przypomnienie_tv"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:textColor="#1f90cc"
                android:text="Ustaw przypomnienie"
                android:textSize="15dp"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_bt"
                android:layout_width="73dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/search_bt"
                android:layout_width="73dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                app:srcCompat="@drawable/search" />

        </LinearLayout>

        <ImageView
            android:id="@+id/rezerwuj_bt"
            android:layout_width="280dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:srcCompat="@drawable/rezerwuj_pasek2" />


    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
